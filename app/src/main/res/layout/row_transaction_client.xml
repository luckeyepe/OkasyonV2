<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:background="@android:color/transparent"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            app:cardCornerRadius="20dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:id="@+id/ratingBar_transactionClientRow"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/textView_transactionClientRowItemName"
                    app:layout_constraintVertical_bias="0.0" android:numStars="5" android:rating="3"
                    style="@android:style/Widget.Material.RatingBar.Indicator" android:stepSize="1"/>
            <Button
                    android:text="Review"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:id="@+id/button_transactionClientRowReview" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_transactionClientRowCost"
                    app:layout_constraintStart_toEndOf="@+id/switch_transactionClientRowOpenOrClose"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="Item Name"
                    android:layout_width="184dp"
                    android:layout_height="19dp"
                    android:id="@+id/textView_transactionClientRowItemName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.05" android:layout_marginBottom="80dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"/>
            <Switch
                    android:text="CLOSE"
                    android:enabled="false"
                    android:layout_width="89dp"
                    android:layout_height="22dp"
                    android:id="@+id/switch_transactionClientRowOpenOrClose"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_transactionClientRowCost"
                    app:layout_constraintVertical_bias="0.0" android:textSize="12sp" android:textAlignment="center"
                    android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.01"/>
            <TextView
                    android:text="P Cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_transactionClientRowCost"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ratingBar_transactionClientRow"
                    android:layout_marginTop="8dp" app:layout_constraintVertical_bias="0.0"
                    android:layout_marginStart="16dp"/>
            <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp" app:srcCompat="@drawable/ic_chat_black_24dp"
                    android:id="@+id/imageButton__transactionClientRowMessage"
                    android:layout_marginEnd="44dp" app:layout_constraintEnd_toEndOf="parent"
                    android:background="@android:color/transparent" android:scaleType="fitXY"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>