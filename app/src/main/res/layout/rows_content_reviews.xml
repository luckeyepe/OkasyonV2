<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@color/mycolor6"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:id="@+id/parentLayoutStoreReviews">

    <TextView
            android:text="kaylokoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reviews_reviewerName"
            app:layout_constraintHorizontal_bias="0.026"
            tools:layout_editor_absoluteY="0dp"
            android:layout_alignParentStart="true" android:layout_marginStart="33dp"
            android:layout_alignParentTop="true" android:layout_marginTop="11dp" android:textSize="18sp"
            android:textStyle="bold"/>
    <RatingBar
            android:layout_width="236dp"
            android:layout_height="40dp"
            android:id="@+id/reviews_reviewStars"
            android:isIndicator="true"
            android:theme="@style/RatingBar"
            android:stepSize="1"
            android:scaleX=".5" android:scaleY=".5"
            android:layout_alignParentEnd="true" android:layout_marginEnd="21dp"
            android:layout_alignTop="@+id/reviews_reviewerName" android:layout_marginTop="-13dp"/>
    <EditText
            android:layout_width="334dp"
            android:layout_height="64dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:enabled="false"
            android:layout_marginStart="27dp"
            android:gravity="center"
            android:id="@+id/reviews_reviewComments" android:layout_marginTop="40dp"
            android:textSize="10sp" android:layout_alignParentStart="true" android:textStyle="bold"
            android:layout_alignParentEnd="true" android:layout_marginEnd="23dp"/>
</RelativeLayout>

