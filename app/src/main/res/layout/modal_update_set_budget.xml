<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
android:background="@color/bg_gray">

    <TextView
            android:text="Update Set Budget for: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView_updateSetBudgetModalTitle"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:textSize="18sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText_updateSetBudgetModalBudget"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_updateSetBudgetModalCategory"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="Update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_updateSetBudgetModalUpdate" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView9" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/imageView9"
            android:background="@drawable/background_deafult_button_round" android:textColor="@android:color/white"/>
    <Button
            android:text="Cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_updateSetBudgetModalCancel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_updateSetBudgetModalBudget"
            app:layout_constraintEnd_toStartOf="@+id/imageView9" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/background_deafult_button_round" android:textColor="@android:color/white"/>
    <ImageView
            android:layout_width="1dp"
            android:layout_height="1dp" app:srcCompat="@android:drawable/screen_background_light_transparent"
            android:id="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/editText_updateSetBudgetModalBudget" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_updateSetBudgetModalTitle"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/textView_updateSetBudgetModalCategory" android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>