<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#188c8c"
        tools:context=".activities.ClientItemDetailsReviewActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="489dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/recyclerView_ClientItemDetailsReviews"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/clientItemDetails_viewReviews_txtView"/>
    <TextView
            android:text="REVIEWS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clientItemDetails_viewReviews_txtView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            android:textColor="#FFFFFF" android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>