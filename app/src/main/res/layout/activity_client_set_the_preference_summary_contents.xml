<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                                   android:background="@drawable/background_default_gradient"
                                                   tools:context=".activities.client_activities.Client_Set_Preference_Summary"
                                                   tools:showIn="@layout/activity_client_set_the_preference_summary_toolbar_content">


    <TextView
            android:text="Name of The Party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_ActivityClientSetThePreferenceSummaryNameofParty"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.068" app:layout_constraintVertical_bias="0.060000002"/>
    <TextView
            android:text="Address of The Party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_ActivityClientSetThePreferenceSummaryAddressofParty"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.068" app:layout_constraintVertical_bias="0.14999998"/>
    <TextView
            android:text="Shopping List :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp" android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_ActivityClientSetThePreferenceSummaryBudget"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Budget :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_ActivityClientSetThePreferenceSummaryAddressofParty3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView_ActivityClientSetThePreferenceSummaryAddressofParty"
            android:layout_marginTop="16dp" android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:maxWidth="50dp"
            android:id="@+id/editText_ActivityClientSetThePreferenceSummaryBudget"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp" android:hint="Budget"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_ActivityClientSetThePreferenceSummaryAddressofParty"
            app:layout_constraintStart_toEndOf="@+id/textView_ActivityClientSetThePreferenceSummaryAddressofParty3"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="345dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/recyclerView_ActivityClientSetThePreferenceSummaryRecyclerViewForItemNeeded"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="36dp" android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"/>
    <ImageButton
            android:layout_width="50dp"
            android:scaleType="fitXY"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_add_circle_accent"
            android:id="@+id/imageButton_ActivityClientSetThePreferenceSummaryAddItemCategory"
            android:background="@android:color/transparent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView_ActivityClientSetThePreferenceSummaryRecyclerViewForItemNeeded"
            android:layout_marginStart="36dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="000/0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_ActivityClientSetThePreferenceSummaryBudgetSummary" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView_ActivityClientSetThePreferenceSummaryRecyclerViewForItemNeeded"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp" android:textSize="18sp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/editicon"
            android:id="@+id/imageButton_ActivityClientSetThePreferenceSummaryEditBudget"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/editText_ActivityClientSetThePreferenceSummaryBudget"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_ActivityClientSetThePreferenceSummaryAddressofParty"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>