<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/background_default_gradient"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical" android:id="@+id/eventsToBeRecycled_layout">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="3dp"
                      android:layout_marginBottom="5dp"
                      android:layout_height="wrap_content">
            <ImageView android:id="@+id/imageView_carttopEventsToBeRecycled"
                       android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:src="@drawable/calendar_icon"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginStart="5dp"
                          android:orientation="vertical">
                <TextView
                        android:id="@+id/textView_clientCartEventsToBeRecycleNameoftheEvent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Name of The Event"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:fontFamily="serif"
                />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>