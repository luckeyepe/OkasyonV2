<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_default_gradient"
        tools:context=".activities.client_activities.ClientViewItemsActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_height="0dp" android:id="@+id/RecyclerView_ClientViewItems"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_width="match_parent"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toTopOf="@+id/button_clientViewItemsNearbyPlaces"/>
    <TextView
            android:text="No Items Available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView_clientViewItemsNoItem"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            android:textSize="18sp" android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/button_clientViewItemsNearbyPlaces"/>
    <Button
            android:text="Find Nearby Places"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/button_clientViewItemsNearbyPlaces"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#0294a5" android:textColor="@android:color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>