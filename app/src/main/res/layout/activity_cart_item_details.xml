<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_default_gradient"
        tools:context=".activities.Homepage_organizer_activities.CartItemDetailsActivity">
    <EditText
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="5"
            android:ems="10"
            android:id="@+id/editText_ItemQuantity"
            app:layout_constraintStart_toEndOf="@+id/textView17" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView17"
            app:layout_constraintBottom_toBottomOf="@+id/textView17" app:layout_constraintVertical_bias="0.413"/>
    <EditText
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText_dateto"
            app:layout_constraintStart_toEndOf="@+id/textView_viewTransactionDetailsRentDuration" android:layout_marginStart="5dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintTop_toTopOf="@+id/textView_viewTransactionDetailsRentDuration"
            app:layout_constraintBottom_toBottomOf="@+id/textView_viewTransactionDetailsRentDuration"/>
    <ToggleButton
            android:text=""
            android:textOff=""
            android:textOn=""
            android:enabled="false"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:background="@drawable/togglebutton"
            android:id="@+id/toggleButton_ActivityClientFindItemToggleForRentAndSale2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="@+id/textView11"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:background="@color/mycolor6"
            android:layout_height="160dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerView_ActivityClientFindItemRecyclerViewImages2"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>

    </LinearLayout>

    <TextView
            android:text="NAME OF ITEM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView__viewTransactionDetailsItemName"
            android:textColor="#188c8c"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_edititem" android:layout_marginTop="2dp"/>
    <TextView
            android:text="Cost of Order"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:id="@+id/textView_viewTransactionDetailsCost"
            android:textColor="#ffffff"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.006" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView__viewTransactionDetailsItemName"/>
    <RatingBar
            android:layout_width="236dp"
            android:layout_height="36dp"
            android:id="@+id/ratingBar_viewTransactionDetailsStare"
            android:isIndicator="true"
            android:theme="@style/RatingBar"
            android:stepSize="1"
            android:scaleX=".5" android:scaleY=".5"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/reviews_reviewerName"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:rating="0"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView__viewTransactionDetailsItemName"/>
    <TextView
            android:text="Item Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="17sp"
            android:id="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.026"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_viewTransactionDetailsCost"/>
    <TextView
            android:text="Reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="17sp"
            android:id="@+id/textView_viewTransactionDetailsWriteReviewLabel"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView_viewTransactionDetailsRentDuration"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView4"
            app:layout_constraintTop_toBottomOf="@+id/textView17" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.157" android:layout_marginTop="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#fff"
                      android:id="@+id/textView_ActivityClientFindItemDetails2"
                      android:textSize="12sp"
                      android:text="This item is desiged by Mikhaelo Nheal Bongo himself. It is durable and convenient to use. This is a top choice for brides "
                      android:visibility="visible"/>
        </LinearLayout>
    </ScrollView>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/recyclerView_ActivityClientFindItemRecyclerViewReviews2"
            app:layout_constraintHorizontal_bias="0.409" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView_viewTransactionDetailsWriteReviewLabel"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Quantity :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17" android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/textView11"/>
    <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/editicon"
            android:id="@+id/imageButton_edititem"
            android:scaleType="fitXY" android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginEnd="16dp"
    />
    <Button
            android:text="Save"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/button_viewTransactionDetailsSaveReview"
            app:layout_constraintTop_toTopOf="@+id/imageButton_edititem"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageButton_edititem"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton_edititem" android:background="@drawable/roundbtn"
            android:textSize="10sp" android:textColor="@android:color/white"/>

    <EditText
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/textView_viewTransactionDetailsRentDuration"
            app:layout_constraintStart_toStartOf="@+id/textView17" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/scrollView4"/>
</androidx.constraintlayout.widget.ConstraintLayout>