            android:text="TextView"
            android:layout_width="74dp"
            android:layout_height="27dp"
            android:id="@+id/textView_ItemDate"
            app:layout_constraintStart_toEndOf="@+id/toggleButton_ActivityClientFindItemToggleForRentAndSale2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.011"/>
