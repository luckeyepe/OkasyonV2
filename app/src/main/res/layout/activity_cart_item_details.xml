            android:text="Item Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="17sp"
            android:id="@+id/textView11" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.531"
            app:layout_constraintHorizontal_bias="0.007"/>
    <TextView
            android:text="Reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="17sp"
            android:id="@+id/textView12" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.72"
            app:layout_constraintHorizontal_bias="0.026"/>
    <ScrollView
            android:layout_width="338dp"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/Button_DeleteItemDetails"
            android:layout_marginBottom="84dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toggleButton_ActivityClientFindItemToggleForRentAndSale"
            app:layout_constraintVertical_bias="1.0" android:id="@+id/scrollView4">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#fff"
                      android:id="@+id/textView_ActivityClientFindItemDetails2"
                      android:textSize="16sp"
                      android:text="This item is desiged by Mikhaelo Nheal Bongo himself. It is durable and convenient to use. This is a top choice for brides "/>
        </LinearLayout>
    </ScrollView>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="368dp"
            android:layout_height="59dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="356dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/recyclerView_ActivityClientFindItemRecyclerViewReviews2"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="DELETE"
            android:layout_width="377dp"
            android:layout_height="69dp"
            android:id="@+id/Button_DeleteItemDetails" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="#0294a5" android:textStyle="bold"
            android:textSize="36sp" android:fontFamily="serif-monospace"/>
    <TextView
            android:text="Quantity :"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView17" android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView_ActivityClientFindItemPriceofTheItem2"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.573" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_ActivityClientFindItemNameofTheItem2"/>
    <TextView
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_itemquantity" android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView17"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_ActivityClientFindItemNameofTheItem"
            android:layout_marginBottom="80dp" app:layout_constraintBottom_toTopOf="@+id/scrollView4"
            app:layout_constraintHorizontal_bias="0.666" app:layout_constraintVertical_bias="0.162"/>
