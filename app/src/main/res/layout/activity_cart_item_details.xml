<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_default_gradient"
        tools:context=".activities.Homepage_organizer_activities.CartItemDetailsActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="5"
            android:ems="10"
            android:id="@+id/editText_ItemQuantity"
            app:layout_constraintStart_toEndOf="@+id/textView17" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView17"
            app:layout_constraintBottom_toBottomOf="@+id/textView17"/>
    <EditText
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText_dateto"
            app:layout_constraintStart_toEndOf="@+id/editText_datefrom" android:layout_marginStart="5dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView4" app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintTop_toBottomOf="@+id/textView11" android:layout_marginTop="8dp"/>
    <ToggleButton
            android:text=""
            android:textOff=""
            android:textOn=""
            android:enabled="false"
            android:layout_width="150dp"
            android:layout_height="22dp"
            android:background="@drawable/togglebutton"
            android:id="@+id/toggleButton_ActivityClientFindItemToggleForRentAndSale2"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView_ActivityClientFindItemNameofTheItem2"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:background="@color/mycolor6"
            android:layout_height="160dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/linearLayout">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerView_ActivityClientFindItemRecyclerViewImages2"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>

    </LinearLayout>

    <TextView
            android:text="NAME OF ITEM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_ActivityClientFindItemNameofTheItem2"
            android:textColor="#188c8c"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:textStyle="bold" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
    <TextView
            android:text="Price of Item"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:id="@+id/textView_ActivityClientFindItemPriceofTheItem2"
            android:textColor="#ffffff"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toggleButton_ActivityClientFindItemToggleForRentAndSale2"/>
    <RatingBar
            android:layout_width="236dp"
            android:layout_height="36dp"
            android:id="@+id/ratingBar_ActivityClientFindItemRating2"
            android:isIndicator="true"
            android:theme="@style/RatingBar"
            android:stepSize="1"
            android:scaleX=".5" android:scaleY=".5"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/reviews_reviewerName"
            android:layout_marginTop="8dp"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:rating="0"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView_ActivityClientFindItemPriceofTheItem2"/>
    <TextView
            android:text="Item Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="17sp"
            android:id="@+id/textView11" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.007"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar_ActivityClientFindItemRating2"/>
    <TextView
            android:text="Reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="17sp"
            android:id="@+id/textView12"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/scrollView4"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#fff"
                      android:id="@+id/textView_ActivityClientFindItemDetails2"
                      android:textSize="16sp"
                      android:text="This item is desiged by Mikhaelo Nheal Bongo himself. It is durable and convenient to use. This is a top choice for brides "/>
        </LinearLayout>
    </ScrollView>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="170dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/recyclerView_ActivityClientFindItemRecyclerViewReviews2"
            app:layout_constraintHorizontal_bias="0.409" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="87dp" app:layout_constraintTop_toBottomOf="@+id/textView12"/>
    <TextView
            android:text="Quantity :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17" android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView_ActivityClientFindItemPriceofTheItem2"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.209" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_ActivityClientFindItemNameofTheItem2"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/toggleButton_ActivityClientFindItemToggleForRentAndSale2"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/editicon"
            android:id="@+id/imageButton_edititem"
            android:scaleType="fitXY" android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/button_saveitem" android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginEnd="20dp"/>
    <Button
            android:text="save"
            android:visibility="invisible"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_saveitem" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/editText_dateto"
            app:layout_constraintTop_toBottomOf="@+id/textView_ActivityClientFindItemNameofTheItem2"/>

    <EditText
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText_datefrom"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/editText_dateto"
            android:layout_marginEnd="3dp" android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView4"
            app:layout_constraintTop_toBottomOf="@+id/textView11" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.534"/>
</androidx.constraintlayout.widget.ConstraintLayout>