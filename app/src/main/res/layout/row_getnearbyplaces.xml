<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@android:color/transparent"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="2dp"
              android:orientation="vertical" android:id="@+id/getNearbyPlacesLayout">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:cardCornerRadius="20dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <LinearLayout android:layout_width="250dp"
                          android:layout_marginTop="10dp"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView android:layout_width="wrap_content"
                          android:layout_marginStart="8dp"
                          android:layout_height="wrap_content"
                          android:text="Name of The Store"
                          android:textSize="19dp"
                          android:textStyle="bold" android:id="@+id/textView_getnearbyplacesNameofTheStore"/>
                <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_marginStart="8dp"

                              android:layout_height="wrap_content"
                              android:text="Rating" android:id="@+id/textView_getnearbyplacesRating"/>
                    <RatingBar
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX=".5"
                            android:scaleY=".5"
                            android:isIndicator="true"
                            android:theme="@style/RatingBar"
                            style="@style/Widget.AppCompat.RatingBar.Small" android:numStars="5"
                            android:rating="4.5" android:id="@+id/ratingBar_getnearbyplacesRatingBar"/>
                    <TextView
                            android:layout_marginStart="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(0)" android:id="@+id/textView_getnearbyplacesNumberofReviews"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    <TextView

                            android:layout_marginStart="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Cebu City" android:id="@+id/textView_getnearbyplacesPlaceofTheStore"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_marginStart="8dp"
                              android:id="@+id/textView_getnearbyplacesOpeningHours"
                              android:layout_height="wrap_content"
                              android:text="Open Until"/>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginStart="5dp"
                          android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/account"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView_getnearbyplacesPhoto"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>