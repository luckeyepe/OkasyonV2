<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background_default_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.Homepage_organizer_activities.UserProfileActivity">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ImageView_UserProfilePic"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:background="@drawable/account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintHorizontal_bias="0.501"/>

    <TextView
            android:id="@+id/textView_homepageSupplierEmail"
            android:layout_width="112dp"
            android:layout_height="40dp"
            android:text="profile"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/ImageView_UserProfilePic"/>

    <ScrollView
            android:id="@+id/summary_scrollView"
            android:layout_width="331dp"
            android:layout_height="283dp"
            android:focusableInTouchMode="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button_saveUserDetails"
            app:layout_constraintVertical_bias="0.26999998">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:ems="10"
                    android:id="@+id/editText_ProfileEmailAddress2" android:hint="Emai Address"
                    android:textColor="@color/gradient1" android:inputType="textEmailAddress" android:textSize="19sp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:enabled="false"
                        android:ems="10"
                        android:id="@+id/editText_ProfileFirstName2" android:hint="First Name"
                        android:textColor="@color/gradient1" android:textSize="19sp"/>
                <EditText
                        android:layout_width="162dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:enabled="false"
                        android:ems="10"
                        android:id="@+id/editText_ProfileLastName2" android:layout_weight="1" android:hint="Last Name"
                        android:textColor="@color/gradient1" android:textSize="19sp"/>
            </LinearLayout>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText_ProfileAddress2" android:hint="Address" android:enabled="false"
                    android:textColor="@color/gradient1" android:textSize="19sp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/editText_ProfileContactNumber2" android:hint="Contact Number"
                    android:textColor="@color/gradient1" android:textSize="19sp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:ems="10"
                    android:id="@+id/editText_ProfileDateOfBirth2" android:hint="DateOfBirth"
                    android:inputType="datetime" android:textColor="@color/gradient1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:enabled="false"
                    android:ems="10"
                    android:id="@+id/editText_ProfileGender2" android:hint="Gender"
                    android:textColor="@color/gradient1" android:textSize="19sp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:enabled="false"
                    android:ems="10"
                    android:id="@+id/editText_ProfilePrice" android:hint="Price"
                    android:textColor="@color/gradient1" android:textSize="19sp"
                    android:visibility="visible"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:enabled="false"
                    android:ems="10"
                    android:id="@+id/editText_ProfileAbout" android:hint="About"
                    android:textColor="@color/gradient1" android:textSize="19sp"
                    android:visibility="visible"/>
        </LinearLayout>
    </ScrollView>

    <ImageButton
            android:src="@drawable/ic_add_a_photo_white_24dp"
            android:layout_width="58dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton_ProfileAddPic"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/ImageView_UserProfilePic"
            app:layout_constraintStart_toStartOf="@+id/ImageView_UserProfilePic"
            app:layout_constraintEnd_toEndOf="@+id/ImageView_UserProfilePic"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageButton
            android:src="@drawable/editicon"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:id="@+id/imageButton_EditProfile"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/ImageView_UserProfilePic" android:layout_marginStart="8dp"
            android:layout_marginTop="224dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.655"/>
    <Button
            android:text="SAVE"
            android:layout_width="82dp"
            android:layout_height="38dp"
            android:id="@+id/button_saveUserDetails"
            android:visibility="invisible"
            android:background="@drawable/roundbtn"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageButton_EditProfile"
            app:layout_constraintHorizontal_bias="0.926" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_homepageSupplierEmail"
            android:textColor="@android:color/white"/>
    <Button
            android:text="Cancel"
            android:layout_width="82dp"
            android:layout_height="38dp"
            android:id="@+id/button_cancelUserDetails"
            android:visibility="invisible"
            android:background="@drawable/roundbtn"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageButton_EditProfile"
            app:layout_constraintHorizontal_bias="0.377" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_homepageSupplierEmail"
            android:textColor="@android:color/white"/><![CDATA[



    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"
    app:layout_constraintTop_toBottomOf="@+id/summary_scrollView"/>



]]>
</androidx.constraintlayout.widget.ConstraintLayout>