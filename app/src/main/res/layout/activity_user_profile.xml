<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background_default_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.Homepage_organizer_activities.UserProfileActivity">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ImageView_UserProfilePic"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.439"/>

    <TextView
            android:id="@+id/textView_homepageSupplierEmail"
            android:layout_width="112dp"
            android:layout_height="40dp"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="130dp"
            android:text="profile"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.871"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ImageView_UserProfilePic" android:textAlignment="center"
            android:layout_marginTop="4dp"/>

    <ScrollView
            android:id="@+id/summary_scrollView"
            android:layout_width="331dp"
            android:layout_height="326dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:focusableInTouchMode="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.216"
            android:layout_marginBottom="5dp" app:layout_constraintBottom_toBottomOf="parent"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:ems="10"
                    android:id="@+id/editText_ProfileEmailAddress2" android:hint="Emai Address"
                    android:textColor="@color/gradient1" android:inputType="textEmailAddress"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:enabled="false"
                        android:ems="10"
                        android:id="@+id/editText_ProfileFirstName2" android:hint="First Name"
                        android:textColor="@color/gradient1"/>
                <EditText
                        android:layout_width="162dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:enabled="false"
                        android:ems="10"
                        android:id="@+id/editText_ProfileLastName2" android:layout_weight="1" android:hint="Last Name"
                        android:textColor="@color/gradient1"/>
            </LinearLayout>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText_ProfileAddress2" android:hint="Address" android:enabled="false"
                    android:textColor="@color/gradient1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/editText_ProfileContactNumber2" android:hint="Contact Number"
                    android:textColor="@color/gradient1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:ems="10"
                    android:id="@+id/editText_ProfileDateOfBirth2" android:hint="DateOfBirth"
                    android:inputType="datetime" android:textColor="@color/gradient1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:enabled="false"
                    android:ems="10"
                    android:id="@+id/editText_ProfileGender2" android:hint="Gender"
                    android:textColor="@color/gradient1"/>
        </LinearLayout>
    </ScrollView>

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="362dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_okasyon_logo"/>

    <ImageButton
            android:src="@drawable/ic_add_a_photo_white_24dp"
            android:layout_width="58dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton_ProfileAddPic"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toStartOf="@+id/imageButton_EditProfile"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ImageView_UserProfilePic"
            app:layout_constraintHorizontal_bias="0.866"/>
    <ImageButton
            android:src="@drawable/editicon"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:id="@+id/imageButton_EditProfile"
            android:background="@android:color/transparent"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_homepageSupplierEmail" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/ImageView_UserProfilePic"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="SAVE"
            android:layout_width="82dp"
            android:layout_height="38dp"
            android:id="@+id/button_saveUserDetails"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_EditProfile" android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/textView_homepageSupplierEmail"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            app:layout_constraintHorizontal_bias="1.0"/><![CDATA[



    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"
    app:layout_constraintTop_toBottomOf="@+id/summary_scrollView"/>



]]>
</androidx.constraintlayout.widget.ConstraintLayout>