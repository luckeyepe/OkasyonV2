<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_default_gradient"
        tools:context=".activities.signup_client_activities.SignUpUserPart1Activity">
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:outlineAmbientShadowColor="@android:color/holo_blue_dark"
            android:outlineSpotShadowColor="@android:color/holo_blue_dark"
            android:textColorHint="@android:color/white"
            app:boxBackgroundColor="@android:color/holo_blue_dark"
            app:boxStrokeColor="@android:color/holo_blue_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:hint="Email Address">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/white"
                android:textColorLink="@android:color/holo_blue_dark"
                android:id="@+id/textInputEdittext_signupClientpart1EmailAddress" android:inputType="textEmailAddress"
                android:textColor="@android:color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="295dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Password"
            android:textColorHint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:passwordToggleContentDescription="description"
            app:passwordToggleDrawable="@drawable/passwordtoggle"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3">


        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColorLink="@android:color/holo_blue_dark"
                android:id="@+id/textInputEdittext_signupClientPart1Password" android:textColor="@color/gradient1"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout7"
            android:layout_width="301dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Confirm Password"
            android:textColorHint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:passwordToggleContentDescription="description"
            app:passwordToggleDrawable="@drawable/passwordtoggle"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.050000012">


        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColorLink="@android:color/holo_blue_dark"
                android:id="@+id/textInputEdittext_signupClientpart1ConfirmPassword"
                android:textColor="@android:color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="151dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_okasyon_logo"
            app:layout_constraintHorizontal_bias="0.157"/>

    <TextView
            android:id="@+id/textView_signupUserPart1UserType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="serif-monospace"
            android:text="USER"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"/>

    <ImageButton
            android:id="@+id/imagebutton_signupClientPart1Next"
            android:layout_width="58dp"
            android:layout_height="53dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_navigate_next_black_24dp"/>

    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="121dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/breadcrumbs"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView_signupUserPart1UserType"/>
</androidx.constraintlayout.widget.ConstraintLayout>