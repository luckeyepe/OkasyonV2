<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:background="@android:color/transparent">
    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        android:background="@drawable/background_default_gradient">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/calendar_icon"
                    android:id="@+id/imageView_modalcalendarforrent2" android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintHorizontal_bias="0.038"
                    app:layout_constraintTop_toBottomOf="@+id/imageView_modalcalendarforrent"/>
            <TextView
                    android:text="start date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_DateRented" android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView_modalcalendarforrent"
                    android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/editText_itemQuantity2"
                    android:layout_marginBottom="18dp" app:layout_constraintBottom_toTopOf="@+id/textView14"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="133dp"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="Pls. Fill up Data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_itemname" android:textStyle="bold"
                    android:textSize="18sp" android:layout_marginTop="2dp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintTop_toBottomOf="@+id/imageButton_modalAddToCartForRentClose"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_close_black"
                    android:id="@+id/imageButton_modalAddToCartForRentClose"
                    android:background="#80FFFFFF"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"/>
            <TextView
                    android:text="Quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editText_itemQuantity2"
                    app:layout_constraintBottom_toBottomOf="@+id/editText_itemQuantity2"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="16dp"/>
            <EditText
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editText_itemQuantity2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:maxLength="2"
                    android:hint="Quantity"
                    android:textSize="12sp"
                    android:inputType="number" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_itemname"
                    app:layout_constraintStart_toEndOf="@+id/textView13" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/calendar_icon"
                    android:id="@+id/imageView_modalcalendarforrent" android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintHorizontal_bias="0.038"
                    app:layout_constraintTop_toBottomOf="@+id/editText_itemQuantity2"/>
            <TextView
                    android:text="Do you want this to be delivered ?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.482"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/imageView_modalcalendarforrent2"/>
            <RadioGroup
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.504"
                    android:id="@+id/radiogroup_deliverornot" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView14">
                <RadioButton
                        android:text="Yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton2_yes"
                        android:layout_weight="1"
                        android:checked="true"
                        android:textSize="12sp"/>
                <RadioButton
                        android:text="No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_no" android:layout_weight="1"
                        android:textSize="12sp"/>
            </RadioGroup>
            <Button
                    android:background="@drawable/background_deafult_button_round"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_modalAddtocart" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Add To Cart"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView19"
                    android:layout_marginBottom="8dp"/>
            <TextView
                    android:text="end date"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:id="@+id/TextView_DateRented2"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_DateRented" android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView_modalcalendarforrent2"
                    android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/textView14"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="130dp"
                    app:layout_constraintVertical_bias="0.571" app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="Note: *Your delivery location will be the location in your profile , you can change your location upon messaging the supplier"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:textColor="@color/lightGrey"
                    android:id="@+id/textView19" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/radiogroup_deliverornot"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>